---
interface Props {
  title: string;
  from: string;
  to: string;
  image: string;
  href: string;
}
const { title, href, from, to, image, bgColor } = Astro.props;
const backgroundColor = "#CDA1DF";
---

<div class="hackathon">
  <a href={href} class="wrapper">
    <div class="logo">
      <img src={image} height="230px" />
    </div>
    <div class="details">
      <h2 class="title">{title}</h2>
      <p class="date">{from} - {to}</p>
    </div>
  </a>
</div>

<style define:vars={{ backgroundColor }}>
  .hackathon {
    position: relative;
    width: 100%;
    margin: 5px 0;
    padding: 10px;
    background-color: var(--backgroundColor);
  }

  a {
    color: black;
    text-decoration: none;
  }

  .title {
    font-size: 48px;
    font-weight: 400;
  }

  .date {
    font-size: 32px;
    font-weight: 400;
  }

  .wrapper {
    display: flex;
    justify-content: center;
    gap: 36px;
  }

  .details {
    opacity: 1;
    display: none;
  }

  .wrapper:hover .details {
    display: block;
  }
</style>
